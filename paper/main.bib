@article{applied-pi-calculus,
  author     = {Abadi, Mart\'{\i}n and Blanchet, Bruno and Fournet, C\'{e}dric},
  title      = {The Applied Pi Calculus: Mobile Values, New Names, and Secure Communication},
  year       = {2017},
